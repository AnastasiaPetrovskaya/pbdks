extends ../head

block body
    div#page-wrapper
        div#page-inner
            div.row
                div.col-md-10.col-md-offset-1
                    h1.page-header Банк
            div.row
                div.col-md-4.col-md-offset-1
                    div.panel.panel-default
                        div.panel-heading
                            h4 Информация о банке
                        div.panel-body
                            div.table-responsive
                                table(style="width:100%")
                                    tbody
                                        tr
                                            td Название
                                            td #{bank.name}
                                        tr
                                            td Телефон
                                            td #{bank.phone}
                                        tr
                                            td Адрес
                                            td #{bank.address}
                                        tr
                                            td Количество банкоматов
                                            td #{bank.atm.length}

